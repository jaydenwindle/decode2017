<% content_for :title, "Enter " + @giveaway.name %>
<% content_for :css do %>
  <link rel="stylesheet" href="/assets/entries.css">
<% end %>

<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center">
      <h1>Welcome to <%= @giveaway.name %>!</h1>
    </div>
  </div>
</div>

<div class="w-100 mt-5 mb-5">
  <% @giveaway.products.each do |product| %>
    <div class="cardish" style="width: <%= 100 / @giveaway.products.length %>%; background-image: url(<%= product.image_url %>); ">
      <div class="overlay w-100 h-100 text-center">
        <p class="title"><%= product.name %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="container-fluid">
  <div class="row text-center mb-5">
    <div class="col-10 offset-1">
      <% @giveaway.description.split(/\r?\n/).each do |line| %>
        <p class="lead"><%= line %></p>
      <% end %>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col-10 offset-1 text-center">
      <h2>Now get ready to win awesome stuff</h2>
    </div>
  </div>

  <div class="row pb-5">
    <div class="col-10 offset-1 col-sm-6 offset-sm-3">
      <%= form_for :user, url: enter_giveaway_path do |f| %>
        <div class="form-group row">
          <%= f.text_field :name, :class => "form-control col-12", :placeholder => "Full name" %>
        </div>

        <div class="form-group row mt-3 mb-3">
          <%= f.text_field :email, :class => "form-control col-12", :placeholder => "Email address" %>
        </div>

        <div class="form-group row">
          <div class="col-12 text-center">
            <%= f.submit "Submit", :class => "btn btn-md btn-success" %>
          </div>
        </div>
      <% end %>
  </div>
</div>
<head>
  <% content_for :title, "Enter Giveaway" %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <link rel="stylesheet" href="/assets/entries.css">
</head>

<header>
  <div class = "container-fluid">
    <div class "row">
      <div class "col-8">
        <h4>Welcome to the "<%= @giveaway.name %>"</h4>
      </div>
</header>


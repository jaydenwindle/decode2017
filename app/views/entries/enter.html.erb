    </div>
  </div>
</div> -->

<section id = "description">
  <div class="container-fluid">
    <div class="row text-center mb-5">
      <div class="col-10 offset-1">
        <p> Description: <%= @giveaway.description %></p>
      </div>
  </div>
</section>

<section id = "display">
  <div class="w-100 mt-5 mb-5">
    <% @giveaway.products.each do |product| %>
      <!-- <% puts product.image_url %> -->
      <div class="cardish" style="width: <%= 100 / @giveaway.products.length %>%; background-image: url(<%= product.image_url %>); ">
        <div class="overlay w-100 h-100 text-center">
          <p class="title"><%= product.name %></p>
        </div>
      </div>
    <% end %>
  </div>
</section>


<div class="row mb-5">
  <div class="col-10 offset-1 text-center">
    <h2>Now get ready to win awesome stuff</h2>
  </div>
</div>

<div class="row pb-5">
  <div class="col-6 offset-3">
    <%= form_for :user, url: enter_giveaway_path do |f| %>
      <div class="form-group row">
          <%= f.text_field :name, :class => "form-control col-12", :placeholder => "Full Name" %>
      </div>
      <div class="form-group row mt-3 mb-3">
        <%= f.text_field :email, :class => "form-control col-12", :placeholder => "Email Address" %>
      </div>
      <div class="form-group row">
        <div class="col-12 text-center">
            <%= f.submit :class => "btn btn-md btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
</div>

<footer class="w-100 p-3 text-center">
  <p class="secret">*No Tesla Model S actually given out. Ha.</p>
</footer>
